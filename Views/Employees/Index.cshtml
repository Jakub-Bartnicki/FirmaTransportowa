@model IEnumerable<FirmaTransportowa.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonDetails.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonDetails.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manager.ManagerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.Account.Login != "admin")
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonDetails.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonDetails.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manager.ManagerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
            @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
        </td>
    </tr>
    }
}

</table>
